<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2 class="mb-3">Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data</a>
            <% if (msg.length != 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                  </div>
            <% } %>
            <% if (contacts.length === 0) { %>
                <div class="alert alert-danger" role="alert">
                    <span class="alert-link">Data kontak tidak ada.</span>
                  </div>
            <% } else {%>

            <% } %>
            <table class="table table-striped table-secondary">
                <tr>
                    <th>#</th>
                    <th>Nama</th>
                    <th>No. Hp</th>
                    <th>Aksi</th>
                </tr>
                <% contacts.forEach((contact, idx) => { %>
                    <tr>
                        <th><%= idx + 1 %></th>
                        <td><%= contact.nama %></td>
                        <td><%= contact.nomor %></td>
                        <td>
                            <a href="/contact/<%= contact.nama %>" class="btn btn-success"><i class="bi bi-info-circle me-1"></i> Detail</a>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>